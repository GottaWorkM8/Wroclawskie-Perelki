<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red_1"
            android:gravity="center_horizontal|top"
            android:orientation="vertical"
            android:paddingTop="20sp">
            <!--    tytul okna-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Dodawanie informacji o obiekcie"
                android:textColor="@color/yellow"
                android:textSize="30dp" />

            <!--    wybieranie zagadki-->
            <Spinner
                android:id="@+id/zagadki_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:entries="@array/riddles_array" />

            <!--    wybieranie obiektu do edycji-->
            <Spinner
                android:id="@+id/obiekty_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/objects_array" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Współrzędne obiektu"
                android:textColor="@color/yellow"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/wspolrzedne_obiektu_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="center"
                    android:hint=" Naciśnij przycisk aby pobrać dane "
                    android:maxLines="1" />

                <Button
                    android:id="@+id/wspolrzedne_obiektu_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow_button_bg_shape"
                    android:text="Załaduj"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Współrzędne obserwacji"
                android:textColor="@color/yellow"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/wspolrzedne_obserwacji_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="center"
                    android:hint=" Naciśnij przycisk aby pobrać dane "
                    android:maxLines="1" />

                <Button
                    android:id="@+id/wspolrzedne_obserwacji_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow_button_bg_shape"
                    android:text="Załaduj"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Współrzędne szczegółu"
                android:textColor="@color/yellow"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/wspolrzedne_szczegołu_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:gravity="center"
                android:hint="Pobierane podczas robienia zdjęcia"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Kierunek telefonu"
                android:textColor="@color/yellow"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/kierunekEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:gravity="center"
                android:hint="Pobierane podczas robienia zdjęcia"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Nachylenie telefonu"
                android:textColor="@color/yellow"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/nachylenieEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:gravity="center"
                android:hint="Pobierane podczas robienia zdjęcia"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Zdjęcie szczegółu"
                android:textColor="@color/yellow"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/zdjecie_szczegolu_imageview"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:adjustViewBounds="true"
                android:background="@drawable/black_border_shape"
                android:maxHeight="250sp"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent_example_image" />

            <Button
                android:id="@+id/zdjecie_szczegolu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/yellow_button_bg_shape"
                android:text="Wykonaj"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <Button
                android:id="@+id/wyslij_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/yellow_button_bg_shape"
                android:text="@string/send_string"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
