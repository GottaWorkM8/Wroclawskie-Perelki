<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="wro.per.fragments.FragmentNierozwiazane">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mapa2"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/doneList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@color/red_4">

            <Button
                android:id="@+id/hardButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/zolte_tlo_poziomow"
                android:text="@string/trudne_string"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/mediumButton"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/mediumButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/zolte_tlo_poziomow"
                android:text="@string/srednie_string"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/easyButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/zolte_tlo_poziomow"
                android:text="@string/latwe_string"
                android:textAllCaps="false"
                app:layout_constraintEnd_toStartOf="@+id/mediumButton"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:id="@+id/scrollView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mediumButton">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/listDoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/object1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <View
                            android:id="@+id/quest1"
                            android:layout_width="336dp"
                            android:layout_height="156dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/biale_tlo_nierozwiazanej_zagadki_shape"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.493"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/wie_e_ci_nie_"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="@string/tytul_murale_string"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/quest1"
                            app:layout_constraintStart_toStartOf="@+id/quest1"
                            app:layout_constraintTop_toTopOf="@+id/quest1" />

                        <TextView
                            android:id="@+id/ilosc_obiektow_text_1"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="76dp"
                            android:text="@string/ilosc_obiektow_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="@+id/quest1"
                            app:layout_constraintTop_toTopOf="@+id/quest1"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/status_text_1"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/status_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="@+id/quest1"
                            app:layout_constraintTop_toBottomOf="@+id/ilosc_obiektow_text_1" />

                        <TextView
                            android:id="@+id/ilosc_text_1"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ilosc_10_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toEndOf="@+id/ilosc_obiektow_text_1"
                            app:layout_constraintTop_toTopOf="@+id/ilosc_obiektow_text_1" />

                        <TextView
                            android:id="@+id/status_text_2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_2_obiekty_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toEndOf="@+id/status_text_1"
                            app:layout_constraintTop_toTopOf="@+id/status_text_1" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/object2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/object1"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/object1">

                        <View
                            android:id="@+id/quest2"
                            android:layout_width="336dp"
                            android:layout_height="156dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/biale_tlo_nierozwiazanej_zagadki_shape"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.493"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="1.0" />

                        <TextView
                            android:id="@+id/magiczny_ostr_w_tumski"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginStart="64dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="64dp"
                            android:gravity="center"
                            android:text="@string/Nieodblokowane_string"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/quest2"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/quest2"
                            app:layout_constraintTop_toTopOf="@+id/quest2" />

                        <TextView
                            android:id="@+id/ilosc_obiektow_2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="64dp"
                            android:text="@string/ilosc_obiektow_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="@+id/quest2"
                            app:layout_constraintTop_toTopOf="@+id/quest2" />

                        <TextView
                            android:id="@+id/status_text_4"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_nierozpoczeto_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toEndOf="@+id/status_text_3"
                            app:layout_constraintTop_toTopOf="@+id/status_text_3" />

                        <TextView
                            android:id="@+id/status_text_3"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/status_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="@+id/quest2"
                            app:layout_constraintTop_toBottomOf="@+id/ilosc_obiektow_2" />

                        <TextView
                            android:id="@+id/ilosc_text_2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ilosc_7_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toEndOf="@+id/ilosc_obiektow_2"
                            app:layout_constraintTop_toTopOf="@+id/ilosc_obiektow_2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/object3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/object2"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/object2">

                        <View
                            android:id="@+id/quest3"
                            android:layout_width="336dp"
                            android:layout_height="156dp"
                            android:background="@drawable/biale_tlo_nierozwiazanej_zagadki_shape"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/kampus_pwr"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginStart="92dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="92dp"
                            android:gravity="center"
                            android:text="@string/Nieodblokowane_string"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/quest3"
                            app:layout_constraintStart_toStartOf="@+id/quest3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ilosc_obiektow_3"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="76dp"
                            android:text="@string/ilosc_obiektow_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="@+id/quest3"
                            app:layout_constraintTop_toTopOf="@+id/quest3"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/ilosc_text_3"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ilosc_8_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toEndOf="@+id/ilosc_obiektow_3"
                            app:layout_constraintTop_toTopOf="@+id/ilosc_obiektow_3"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/status_text_5"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/status_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="@+id/quest3"
                            app:layout_constraintTop_toBottomOf="@+id/ilosc_obiektow_3" />

                        <TextView
                            android:id="@+id/status_text_6"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_nierozpoczeto_string"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toEndOf="@+id/status_text_5"
                            app:layout_constraintTop_toBottomOf="@+id/ilosc_obiektow_3" />
                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/koniec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/object3">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|center_horizontal"
                            android:text="5/8"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</FrameLayout>